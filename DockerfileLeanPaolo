    #
    # Release Version
    #

    FROM mcr.microsoft.com/dotnet/sdk:6.0 as build
    
    WORKDIR /Lean
    
    COPY . .
    
    RUN dotnet publish Launcher/QuantConnect.Lean.Launcher.csproj -c Release -o /output


    FROM mcr.microsoft.com/dotnet/runtime:6.0-alpine-arm32v7
    WORKDIR /Lean

    COPY Data/market-hours /Data/market-hours
    COPY Data/symbol-properties /Data/symbol-properties
    
    COPY --from=build /output /Lean

    ENTRYPOINT [ "dotnet", "QuantConnect.Lean.Launcher.dll" ]
